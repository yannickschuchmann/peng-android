<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/theme_window_background" />
        </shape>
    </item>

    <item android:top="-7dp" android:right="-4dp" android:left="50dp" android:bottom="5dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                    android:dashGap="10px"
                    android:dashWidth="10px"
                    android:width="3dp"
                    android:color="@color/theme_primary" />
        </shape>
    </item>
    <item android:top="-7dp" android:bottom="7dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/theme_window_background" />
        </shape>
    </item>
</layer-list>