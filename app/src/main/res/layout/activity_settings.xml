<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.yannickschuchmann.peng.app.views.activities.SettingsActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/activity_movies_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/theme_primary"
            >
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:textColor="@color/theme_text_light"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
            android:orientation="vertical"
            android:paddingTop="?attr/actionBarSize"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <view android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              class="com.yannickschuchmann.peng.app.views.components.SectionHeadline" android:id="@+id/view1"
              custom:headlineText="Profil"
              android:layout_gravity="center_horizontal"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <view android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  class="com.yannickschuchmann.peng.app.views.components.LinkButton" android:id="@+id/edit_profil"
                  custom:ButtonText="Profil bearbeiten"
                  android:layout_gravity="center_horizontal"/>
            <view android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  class="com.yannickschuchmann.peng.app.views.components.LinkButton" android:id="@+id/edit_character"
                  custom:ButtonText="Charakter ändern"
                  android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <view android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              class="com.yannickschuchmann.peng.app.views.components.SectionHeadline" android:id="@+id/view2"
              custom:headlineText="Account"
              android:layout_gravity="center_horizontal"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <view android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  class="com.yannickschuchmann.peng.app.views.components.LinkButton" android:id="@+id/logout"
                  custom:ButtonText="Ausloggen"
                  android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Account löschen"
                android:textAllCaps="true"
                android:id="@+id/textView10" android:layout_gravity="center_horizontal" android:gravity="center"
                android:paddingTop="15dp" android:paddingBottom="15dp" android:textColor="@color/theme_primary"
                android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>
