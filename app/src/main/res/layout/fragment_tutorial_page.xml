<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/theme_accent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tutorial_image" android:layout_below="@+id/activity_movies_toolbar"
        android:layout_centerHorizontal="true" android:src="@drawable/tutorial_dummy_page_0"
        android:background="@drawable/red_circle_bright"
        android:layout_weight="0.32" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/fragmentLabelSwipeToChange"
            android:textAllCaps="true"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:textColor="@color/theme_text_light" android:gravity="center_horizontal"
            android:background="@drawable/border_top_white" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:paddingTop="5dp"/>
    </LinearLayout>

</LinearLayout>