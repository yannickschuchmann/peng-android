<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.yannickschuchmann.peng.app.ProfileActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/activity_movies_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/theme_primary"
            >
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:textColor="@color/theme_text_light"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2"
            android:layout_below="@+id/activity_movies_toolbar" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_alignTop="@+id/scrollView2"
                    android:layout_centerHorizontal="true">
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="176dp"
                        android:id="@+id/imageView" android:layout_below="@+id/activity_movies_toolbar"
                        android:layout_centerHorizontal="true" android:src="@drawable/dummy_profile"
                        android:paddingTop="10dp" android:paddingBottom="10dp"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Paul Woerner"
                        android:id="@+id/user_name" android:layout_alignTop="@+id/scrollView2"
                        android:layout_centerHorizontal="true" android:layout_marginTop="0dp"
                        android:gravity="center_horizontal" android:textSize="@dimen/profile_user_name"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="„Ich hab noch nie ein Spiel verloren.“"
                        android:id="@+id/user_slogan" android:gravity="center_horizontal" android:textSize="23dp"
                        android:textColor="@color/theme_primary"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ändern"
                        android:id="@+id/user_slogan_edit" android:layout_gravity="center_horizontal"
                        android:textSize="23dp" android:textColor="@color/theme_text_gray"/>
            </LinearLayout>
            <com.yannickschuchmann.peng.app.SectionHeadline
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/headline1"
                    custom:headlineText="Statistik"
                    />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
